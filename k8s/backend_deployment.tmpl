# k8s/Backend/backend-deployment.tmpl
apiVersion: apps/v1
kind: Deployment
metadata:
  name: manhattan-backend
  labels:
    app: backend
spec:
  replicas: 1 # Or your desired replica count
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      containers:
      - name: backend-container
        image: ${IMAGE_URL} # <--- IMPORTANT: Ensure this line uses ${IMAGE_URL}
        ports:
        - containerPort: 8080 # Your application's port
        env:
        - name: SPRING_DATASOURCE_URL
          value: "jdbc:postgresql://your-database-host:5432/your-database-name" # Replace with your database URL
        - name: SPRING_DATASOURCE_USERNAME
          value: "your-database-username" # Replace with your database username
        - name: SPRING_DATASOURCE_PASSWORD
          valueFrom:
            secretKeyRef:
              name: your-database-secret # Replace with the name of your Kubernetes Secret
              key: database-password # Replace with the key in your Secret that holds the password
        - name: SPRING_DATASOURCE_DRIVER-CLASS-NAME
          value: "org.postgresql.Driver" # This is the correct driver class for PostgreSQL
        # You might also have OpenWeather API key
        - name: OPENWEATHER_API_KEY
          valueFrom:
            secretKeyRef:
              name: your-api-secret # Replace with the name of your Kubernetes Secret for API keys
              key: openweather-api-key # Replace with the key in your Secret that holds the API key
